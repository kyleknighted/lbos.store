---
import { Image } from 'astro:assets'
import LogoText from '../assets/logo-text.png'
import Cabin from '../assets/cabin.png'
---

<header>
  <a href="/" id="logo">
    <h1><Image src={LogoText} alt="Lil Bit of Something" /></h1>
    <h2><Image src={Cabin} alt="Your One-Stop Country Store" /></h2>
  </a>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    min-width: var(--min-width);
    background-color: var(--light-color);
    box-shadow: var(--box-shadow);
    height: 20cqw;
    max-height: 200px;
    padding: 2cqh;

    #logo {
      display: block;
      position: relative;
      width: 100%;
      height: 100%;
      text-align: center;

      h1 {
        font-size: 2.5rem;
        margin-bottom: 0;
        max-width: 400px;
        width: auto;
        height: 100%;
        display: inline-block;
      }

      h2 {
        max-width: 220px;
        height: 10vw;
        display: block;
        opacity: 0.5;
        position: absolute;
        inset: 50% auto auto 50%;
        margin-inline-start: max(-30vw, -310px);
        margin-block-start: max(-5vw, -55px);
      }

      img {
        display: block;
        height: 100%;
        width: auto;
      }
    }

    @container header (max-width: 768px) {
      & {
        .logo {
          padding: 1cqh 0;
        }
      }
    }
  }
</style>
