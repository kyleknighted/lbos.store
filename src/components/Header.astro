---
import { Image } from 'astro:assets'
import LogoText from '../assets/logo-text.png'
import Cabin from '../assets/cabin.png'
---

<header>
  <div id="logo">
    <a href="/">
      <h1><Image src={LogoText} alt="Lil Bit of Something" /></h1>
      <h2><Image src={Cabin} alt="Your One-Stop Country Store" /></h2>
    </a>
  </div>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/menu">Menu</a></li>
      <li><a href="/location">Location</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    min-width: var(--min-width);
    background-color: var(--light-color);
    box-shadow: var(--box-shadow);
    height: min(30cqw, 200px);
    max-height: 200px;
    padding: 1cqh;
    padding-bottom: 2rem;
    container-name: header;
    container-type: inline-size;

    #logo {
      display: block;
      position: relative;
      width: 100%;
      height: 100%;
      text-align: center;

      > a {
        display: block;
        height: 100%;
        width: 100%;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 0;
        max-width: 400px;
        width: auto;
        display: inline-block;
        height: 100%;
        max-height: 160px;
      }

      h2 {
        max-width: 220px;
        width: 16vw;
        height: 100%;
        max-height: min(54%, 105px);
        display: block;
        opacity: 0.5;
        position: absolute;
        inset: 50% auto auto 50%;
        margin-inline-start: max(-30vw, -310px);
        margin-block-start: max(-5vw, -55px);
      }

      img {
        display: block;
        height: 100%;
        width: auto;
      }
    }
  }

  nav {
    margin-top: 0.5rem;
    font-size: 0.9rem;

    ul {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2.5rem;
      padding: 0;
      margin: 0;
      list-style: none;

      li {
        a {
          color: var(--dark-color);
        }
      }
    }
  }
</style>
