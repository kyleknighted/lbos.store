<style is:global>
  :root {
    --primary-color: #7e4320;
    --secondary-color: #5f7470;
    --tertiary-color: #1b9aaa;
    --dark-color: #3e2723;
    --light-color: #fff;

    --text-color: var(--dark-color);
    --light-text: var(--light-color);

    --border-radius: 8px;
    --box-shadow: 0 4px 8px rgba(62, 39, 35, 0.25);

    --min-width: 360px;
  }

  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ul,
  ol {
    list-style: none;
  }

  button,
  input {
    border: none;
    background: none;
    font-family: inherit;
    font-size: inherit;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  html,
  body {
    min-height: 100%;
    min-width: var(--min-width);
  }

  /* Base Styles */
  body {
    font-family: 'Libre Baskerville', sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    font-size: 16px;
    background-color: var(--light-color);
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: 'Montserrat', sans-serif;
    margin-block-end: 0;
  }

  .container {
    width: 90cqw;
    max-width: 1200px;
    min-width: var(--min-width);
    margin: 0 auto;
    padding: 0 5px;
    overflow: hidden;

    p {
      margin-block: min(5vw, 2.5rem);
    }
  }

  section {
    padding: 5cqw 0;
  }

  a {
    color: var(--secondary-color);
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--tertiary-color);
  }
</style>
