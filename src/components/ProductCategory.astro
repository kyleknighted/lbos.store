---
interface Props {
  title: string
  description: string
  image: {
    src: string
    alt: string
  }
  href: string
  content: string
  cta: string
}
const { title, description, image, href, content, cta } = Astro.props
---

<div class="product-category" id="steel-buildings">
  <a class="product-category-header" href={href}>
    <div class="product-image">
      <img src={image.src} alt={image.alt} />
    </div>
    <h2>{title}</h2>
    <h3>{description}</h3>
  </a>

  <div class="product-card">
    <p>
      {content}
    </p>
    <p>
      <a href={href} class="btn">{cta} <span class="arrow">&rarr;</span></a>
    </p>
  </div>
</div>

<style>
  h2 {
    text-transform: uppercase;
    text-shadow: 0 0 1px var(--light-color);
    color: var(--dark-color);
    font-size: 44px;
    line-height: 3rem;
    padding-inline-start: 0.5rem;
    padding-block-start: 1rem;
  }

  h3 {
    font-size: 14px;
    color: var(--dark-color);
    font-family: 'Libre Baskerville', sans-serif;
    font-style: italic;
    padding-block: 0.5rem;
    text-transform: capitalize;
  }

  .product-category-header {
    grid-area: 1 / 1 / 2;
    position: relative;

    h2 {
      position: absolute;
      inset: 0;
      z-index: 1;
    }

    &:hover {
      .product-image {
        img {
          opacity: 0.5;
        }
      }
    }
  }

  .product-image {
    height: 200px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--border-radius);

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.3;
      filter: blur(1px);
      transition: opacity 0.3s ease;
    }
  }
</style>
